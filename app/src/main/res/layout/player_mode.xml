<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ttt3"
    android:orientation="vertical"
    tools:context="com.example.android.tictactoe2.OptionsActivity.PlayerMode">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:background="#6decc5c5"
        android:orientation="vertical">

        <Button
            android:id="@+id/single_player"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:drawableLeft="@drawable/single_person"
            android:text="@string/single_player_mode"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/two_players"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:drawableLeft="@drawable/two_persons"
            android:text="@string/two_player_mode" />

    </LinearLayout>
</LinearLayout>
